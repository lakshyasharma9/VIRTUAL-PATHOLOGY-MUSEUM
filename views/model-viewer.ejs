<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Virtual Pathology Museum</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .viewer-container {
            position: relative;
            width: 100%;
            height: 80vh;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 10px;
            overflow: hidden;
        }
        
        #model-canvas {
            width: 100%;
            height: 100%;
            display: block;
        }
        
        .controls-panel {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background: rgba(255,255,255,0.9);
            padding: 15px;
            border-radius: 10px;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        
        .control-btn {
            background: #4a90e2;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 50px;
            cursor: pointer;
            font-size: 16px;
            transition: all 0.3s;
        }
        
        .control-btn:hover {
            background: #357abd;
            transform: scale(1.05);
        }
        
        .info-panel {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(255,255,255,0.9);
            padding: 15px;
            border-radius: 10px;
            max-width: 200px;
        }
        
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: #28a745;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }
        
        .loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 18px;
            color: #666;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="nav-container">
            <div class="logo">Virtual Pathology Museum</div>
            <div class="auth-buttons">
                <% if (user) { %>
                    <div class="user-info">
                        <span>Welcome, <%= user.email %></span>
                        <form action="/logout" method="POST" style="display: inline;">
                            <button type="submit" class="logout-btn">Logout</button>
                        </form>
                    </div>
                <% } else { %>
                    <a href="/login" class="btn btn-login">Login</a>
                    <a href="/signup" class="btn btn-signup">Sign Up</a>
                <% } %>
            </div>
        </div>
    </header>

    <div class="container">
        <h1 class="title"><%= title %></h1>
        
        <div class="viewer-container">
            <a href="/" class="back-btn">‚Üê Home</a>
            
            <div class="loading" id="loading">Loading 3D Model...</div>
            <canvas id="model-canvas"></canvas>
            
            <div class="controls-panel">
                <button class="control-btn" onclick="zoomIn()">üîç Zoom In</button>
                <button class="control-btn" onclick="zoomOut()">üîç Zoom Out</button>
                <button class="control-btn" onclick="resetView()">üîÑ Reset</button>
                <button class="control-btn" onclick="toggleRotation()">‚è∏Ô∏è Pause</button>
            </div>
            
            <div class="info-panel">
                <h4>Controls:</h4>
                <p>‚Ä¢ Mouse: Rotate model</p>
                <p>‚Ä¢ Scroll: Zoom in/out</p>
                <p>‚Ä¢ Buttons: Quick actions</p>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fflate@0.6.9/umd/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/controls/OrbitControls.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/loaders/FBXLoader.js"></script>
    
    <script>
        let scene, camera, renderer, controls, model;
        let isRotating = true;
        
        function init() {
            const canvas = document.getElementById('model-canvas');
            const loading = document.getElementById('loading');
            
            // Scene setup
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0xf0f0f0);
            
            // Camera setup
            camera = new THREE.PerspectiveCamera(75, canvas.clientWidth / canvas.clientHeight, 0.1, 1000);
            camera.position.set(0, 0, 5);
            
            // Renderer setup
            renderer = new THREE.WebGLRenderer({ canvas: canvas, antialias: true });
            renderer.setSize(canvas.clientWidth, canvas.clientHeight);
            renderer.shadowMap.enabled = true;
            renderer.shadowMap.type = THREE.PCFSoftShadowMap;
            
            // Controls
            controls = new THREE.OrbitControls(camera, renderer.domElement);
            controls.enableDamping = true;
            controls.dampingFactor = 0.05;
            
            // Lighting
            const ambientLight = new THREE.AmbientLight(0x404040, 0.6);
            scene.add(ambientLight);
            
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
            directionalLight.position.set(10, 10, 5);
            directionalLight.castShadow = true;
            scene.add(directionalLight);
            
            // Load FBX model
            const loader = new THREE.FBXLoader();
            loader.load('/<%= modelFile %>', function(object) {
                model = object;
                model.scale.setScalar(0.01);
                model.position.set(0, 0, 0);
                
                model.traverse(function(child) {
                    if (child.isMesh) {
                        child.castShadow = true;
                        child.receiveShadow = true;
                    }
                });
                
                scene.add(model);
                loading.style.display = 'none';
                animate();
            }, function(progress) {
                console.log('Loading progress:', (progress.loaded / progress.total * 100) + '%');
            }, function(error) {
                console.error('Error loading model:', error);
                loading.textContent = 'Error loading model. Please check if the file exists.';
                
                // Fallback: Create a sample cube if FBX fails
                const geometry = new THREE.BoxGeometry(2, 2, 2);
                const material = new THREE.MeshPhongMaterial({ 
                    color: 0xff6b6b,
                    shininess: 100
                });
                model = new THREE.Mesh(geometry, material);
                model.castShadow = true;
                model.receiveShadow = true;
                
                scene.add(model);
                loading.textContent = 'FBX model failed to load. Showing sample cube.';
                animate();
            });
            
            // Handle window resize
            window.addEventListener('resize', onWindowResize);
        }
        
        function animate() {
            requestAnimationFrame(animate);
            
            if (model && isRotating) {
                model.rotation.y += 0.005;
            }
            
            controls.update();
            renderer.render(scene, camera);
        }
        
        function zoomIn() {
            camera.position.multiplyScalar(0.9);
        }
        
        function zoomOut() {
            camera.position.multiplyScalar(1.1);
        }
        
        function resetView() {
            camera.position.set(0, 0, 5);
            controls.reset();
        }
        
        function toggleRotation() {
            isRotating = !isRotating;
            const btn = event.target;
            btn.textContent = isRotating ? '‚è∏Ô∏è Pause' : '‚ñ∂Ô∏è Play';
        }
        
        function onWindowResize() {
            const canvas = document.getElementById('model-canvas');
            camera.aspect = canvas.clientWidth / canvas.clientHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(canvas.clientWidth, canvas.clientHeight);
        }
        
        // Initialize when page loads
        window.addEventListener('load', init);
    </script>
</body>
</html>